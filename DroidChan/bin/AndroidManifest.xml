<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.droidchan.droidchan"
    android:versionCode="1"
    android:versionName="1.0" >

    <!-- Permiso conexion -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Uso de camara -->
    <uses-feature android:name="android.hardware.camera" />

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.droidchan.droidchan.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.droidchan.droidchan.SignUpActivity"
            android:label="@string/title_activity_sign_up" >
        </activity>
        <activity
            android:name="com.droidchan.droidchan.ProfileActivity"
            android:label="@string/title_activity_profile" >
        </activity>
        <activity
            android:name="com.droidchan.droidchan.DroidActivity"
            android:label="@string/title_activity_droid"
            android:uiOptions="splitActionBarWhenNarrow" >
            <meta-data
                android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
        </activity>
        <activity
            android:name="com.droidchan.droidchan.PruebaActivity"
            android:label="@string/title_activity_prueba" >
        </activity>
        <activity
            android:name="com.droidchan.droidchan.Prueba2Activity"
            android:label="@string/title_activity_prueba2" >
        </activity>
        <activity
            android:name="com.droidchan.droidchan.ThreadActivity"
            android:label="@string/title_activity_thread" >
        </activity>
        <activity
            android:name="com.droidchan.droidchan.CreateThreadActivity"
            android:label="@string/title_activity_create_thread" >
        </activity>
        <activity
            android:name="com.droidchan.droidchan.GroupActivity"
            android:label="@string/title_activity_group" >
        </activity>
        <activity
            android:name="com.droidchan.droidchan.CreateGroupActivity"
            android:label="@string/title_activity_create_group" >
        </activity>
        <activity
            android:name="com.droidchan.droidchan.CreateGroupThreadActivity"
            android:label="@string/title_activity_create_group_thread" >
        </activity>
        <activity
            android:name="com.droidchan.droidchan.ViewImageActivity"
            android:label="@string/title_activity_view_image" >
        </activity>
        <activity
            android:name="com.droidchan.droidchan.MailBoxActivity"
            android:label="@string/title_activity_mail_box" >
        </activity>
    </application>

</manifest>
