<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/layoutSuscriptionFragment2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/profileStaticsNS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suscriptores: " />
        <TextView
            android:id="@+id/profileStaticsNSN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/profileStaticsNS"
            android:text="@string/strProfileResult" />

		<TextView
		    android:id="@+id/profileStaticsNSS"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/profileStaticsNS"
		    android:text="Suscripciones: " />

		<TextView
            android:id="@+id/profileStaticsNSSN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/profileStaticsNSS"
            android:layout_below="@+id/profileStaticsNSN"
            android:text="@string/strProfileResult" />

		    
    </RelativeLayout>
	<ListView
        android:id="@+id/ListView_listado"
        android:layout_width="match_parent"
        android:layout_below="@+id/layoutSuscriptionFragment2"
        android:layout_height="0dip"
        android:layout_weight="1" />
    
</LinearLayout>
